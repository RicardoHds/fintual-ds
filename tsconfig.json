{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "ES6",
    "module": "ESNext",
    "lib": ["dom", "es6"],
    "jsx": "react-jsx",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "baseUrl": "./src",
    "skipLibCheck": true,
    "allowJs": true,
    "rootDir": "./src",
    "types": ["node"],
    "plugins": [
      { "transform": "typescript-transform-paths", "afterDeclarations": true }
    ],
    "paths": {
      "pretty-format": ["node_modules/pretty-format"],
      "@/*": ["*"]
    }
  },
  "include": ["./src/**/*.ts", "./src/**/*.tsx"],
  "exclude": ["node_modules", "dist", "dist-cjs"]
}
